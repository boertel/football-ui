@import './variables'
@import './colors'

html.fixed
    position: fixed
    right: 0
    left: 0

body
    background-color: #eee

body, button, input
    margin: 0
    padding: 0
    -webkit-font-smoothing: antialiased
    //font-family: 'Work Sans', Lato, sans-serif
    font-family: Lato, sans-serif
    font-size: 16px
    color: $default

*
    box-sizing: border-box

h1, h2, h3, h4, h5
    margin: 0
    padding: 0

ul, li
    margin: 0
    padding: 0
    list-style: none

.content
    max-width: 800px
    margin: 0 auto
    margin-top: 60px
    padding: pad(6)


.instructions
    margin-bottom: pad(20)

    li
        position: relative
        margin-left: pad(10)
        margin-bottom: pad(4)
        &::before
            position: absolute
            content: '-'
            right: 100%
            margin-right: pad(2)

@import './animations'
@import './ui'

@import './Header'
