.score-input
    margin: pad(4)
    width: 60px

    input
        border-radius: $border-radius
        border-width: 1px
        border-style: solid
        border-color: $border-color
        width: 100%;
        padding: pad(2)
        font-size: 28px
        text-align: center

        &[disabled]
            background-color: rgba($grey, 0.2)
