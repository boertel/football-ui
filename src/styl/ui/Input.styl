$input-border-color = $grey-light
$input-border-color-hover = $primary-dark

$danger-border-color = $danger


.text-input
    border-radius: $border-radius
    border-width: 1px
    border-style: solid
    border-color: $input-border-color
    padding: pad(2)

    &:hover, &:focus
        border-color: $input-border-color-hover
        outline: none

    &.danger
        border-color: $danger
        color: $danger

        &:hover, &:focus
            color: $default
