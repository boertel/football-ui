.modal-overlay
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: rgba(0, 0, 0, 0.65)
    display: flex
    align-items: flex-start
    justify-content: center
    z-index: 2

.modal
    margin: pad(6)
    padding: pad(6)
    padding-top: pad(2)
    min-width: 300px
    width: 100%
    max-width: 800px
    min-height: 50%
    background: #fff
    border-radius: $border-radius
    z-index: 1

    .modal-header
        display: flex
        justify-content: flex-end
        font-size: 28px

        a
            cursor: pointer

    .modal-actions
        display: flex
        align-items: center
        justify-content: center
        margin-top: pad(10)
