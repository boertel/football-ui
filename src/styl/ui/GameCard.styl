.day
    margin-bottom: pad(10)

.game
    display: block
    border-radius: $border-radius
    box-shadow: 0px 0px 6px 1px rgba(173, 173, 173, 0.5)
    margin: pad(4) 0
    text-decoration: none
    color: $default

.game-card
    display: flex
    justify-content: space-between
    align-items: center
    flex-direction: column
    padding: pad(4)
    border-left-width: 4px
    border-color: transparent
    border-style: solid
    background-color: #fff

    &.win
        border-color: $win

    &.perfect
        border-color: $perfect

    &.loss
        border-color: $loss
        background-color: rgba($loss, 0.2)

    .game-metadata
        display: flex
        justify-content: space-between
        align-items: center
        width: 100%
        margin-bottom: pad(4)


    .game-content
        display: flex
        justify-content: space-between
        align-items: center
        width: 100%

    .score
        display: flex
        flex-grow: 1
        justify-content: space-between
        align-items: center
        flex-basis: 50%


        .competitor
            display: flex
            align-items: center

            .competitor-name
                padding: 0 pad(4)

        &:last-child
            flex-direction: row-reverse
            .competitor
                flex-direction: row-reverse

    .game-my-bet
        display: flex
        justify-content: space-between
        width: 100%
