.day
    margin-bottom: pad(10)

.game
    border-radius: $border-radius
    box-shadow: 0px 0px 6px 1px rgba(173, 173, 173, 0.5)
    padding: pad(4)
    margin: pad(4) 0
    background-color: #fff

    a, a:hover, a:visited, a:active
        text-decoration: none
        color: $default

.game-card
    display: flex
    justify-content: space-between
    align-items: center

    .competitor
        display: flex
        align-items: center

        svg
            margin-right: pad(3)
