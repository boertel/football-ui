.bets
    margin-top: pad(2)
    border-top: 1px solid $border-color
    padding-top: pad(2)

.bet-sections
    display: flex
    justify-content: space-between
    margin-top: pad(4)

.bet-section
    flex-grow: 1
    padding-right: pad(4)

    h4
        margin-bottom: pad(3)
        text-align: center

    &:first-child
        h4
            text-align: left

    &:last-child
        padding-right: 0
        h4
            text-align: right


.bet-item
    display: flex
    justify-content: space-between
    align-items: center
    width: 100%
